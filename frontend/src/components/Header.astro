<header class="header">
  <div class="logo">
    <img
      src="https://stellaralgo.com/wp-content/themes/wp-stellaralgo/assets/images/logo-white.svg"
      alt="StellarAlgo"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />
  </div>

  <nav class="menu">
    <ul>
      <a href="https://stellaralgo.com/" target="_blank">Main</a>
    </ul>
  </nav>
</header>

<style>
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100px;
    padding: 0.8rem 1.5rem;
  }

  .menu > ul > a {
    text-decoration: none;
    color: rgb(var(--bright-teal));
    transition: color 0.3s ease-in-out;
  }

  .menu > ul > a:hover {
    color: rgb(var(--pink));
  }
</style>
